<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateWriteupsActivity"
    android:padding="18dp"
    style="@style/Theme.Notes">

    <EditText
        android:id="@+id/updateWriteUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:alpha="0.65"
        android:maxWidth="144dp"
        android:inputType="text|textMultiLine"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="your write up here..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAuthorName"/>

    <EditText
        android:id="@+id/updateAuthorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:ems="10"
        android:alpha="0.55"
        android:inputType="text"
        android:hint="author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateTitle" />

    <EditText
        android:id="@+id/updateTitle"
        android:background="#00000000"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/updateButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:alpha="0.7"
        android:src="@drawable/icon_done"
        app:layout_constraintStart_toEndOf="@+id/updateTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:alpha="0.7"
        android:src="@drawable/icon_delete"
        android:layout_marginStart="2dp"

        app:layout_constraintStart_toEndOf="@+id/updateButton"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

